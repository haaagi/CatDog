{{>layout/header}}

<h1>회원 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">아이디</label>
                <input type="text" class="form-control" id="email" placeholder="아이디(이메일)을 입력하세요">
            </div>
            <div class="form-group">
                <label for="password">비밀번호</label>
                <input type="text" class="form-control" id="password" placeholder="비밀번호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="name"> 이름 </label>
                <input type="text" class="form-control" id="name" placeholder="이름을 입력하세요"></input>
            </div>
            <div class="form-group">
                <label for="nickname"> 별명 </label>
                <input type="text" class="form-control" id="nickname" placeholder="닉네임을 입력하세요"></input>
            </div>
            <div class="form-group">
                <label for="birthday"> 생일 </label>
                <input type="text" class="form-control" id="birthday" placeholder="생년월일을 입력하세요"></input>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-user-save">등록</button>
    </div>
</div>

{{>layout/footer}}