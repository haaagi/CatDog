{{>layout/header}}

<h1>회원 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">아이디</label>
                <input type="text" class="form-control" id="name" placeholder="아이디를 입력하세요">
            </div>
            <div class="form-group">
                <label for="author"> 이메일 </label>
                <input type="text" class="form-control" id="email" placeholder="비밀번호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content"> 사진 </label>
                <input type="text" class="form-control" id="picture" placeholder="이름을 입력하세요"></input>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-user-save">등록</button>
    </div>
</div>

{{>layout/footer}}